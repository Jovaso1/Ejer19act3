Clase Triangulo:
package ejemplo.ejer.pkg19.triangulo;
public class Triangulo {
    public static double calcAltura(double lado){
        double altura;
        altura = (lado * Math.sqrt(3))/2;
        return altura;
    }
    public static double calcArea(double lado){
        double area;
        area = (Math.pow(lado, 2) * Math.sqrt(3))/4;
        return area;
    }
    public static double calcPerimetro(double lado){
        double perimetro;
        perimetro = 3 * lado;
        return perimetro;
    }
}
